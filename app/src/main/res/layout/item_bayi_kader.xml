<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_5002"
        android:paddingVertical="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_foto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/foto_bayi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_baby" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="casual"
            android:id="@+id/tv_nama_bayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/cv_foto"
            android:text="Nama Bayi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_usia"
            android:fontFamily="casual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_bayi"
            android:layout_toRightOf="@id/cv_foto"
            android:text="10 Bulan"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/rl_imunisasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:fontFamily="casual"
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imunisasi"
                android:textColor="@color/black" />

            <TextView
                android:fontFamily="casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_alignLeft="@id/tv1"
                android:layout_alignRight="@id/tv1"
                android:gravity="center_horizontal"
                android:text="11/11"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>