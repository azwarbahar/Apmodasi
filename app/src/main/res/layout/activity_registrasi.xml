<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.intro.RegistrasiActivity">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/img_top" />

    <ImageView
        android:id="@+id/img_bottom"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_bottom" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_children" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:fontFamily="casual"
        android:text="Apmodasi"
        android:textColor="@color/purple_200"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_name"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:text="Sign Up"
        android:textColor="@color/purple_700"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_nik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_signup"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_strok_rectangle_primary"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:hint="NIK"
        android:inputType="text"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nik"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_strok_rectangle_primary"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:hint="Nama Lengkap"
        android:inputType="text"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp" />

    <EditText
        android:id="@+id/et_telpon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nama"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_strok_rectangle_primary"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:hint="Telpon"
        android:inputType="phone"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp" />

    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_telpon"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_strok_rectangle_primary"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:hint="Alamat"
        android:inputType="text"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp" />

    <TextView
        android:id="@+id/et_kelurahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_alamat"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_strok_rectangle_primary"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp"
        android:text="Kelurahan"
        android:textColor="@color/grey"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_kelurahan"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_strok_rectangle_primary"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp" />

    <RelativeLayout
        android:id="@+id/rl_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_gradien_primary"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_regist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Sudah punya akun ? ( Untuk Bunda )"
        android:textColor="@color/purple_200"
        android:textSize="12sp"
        android:textStyle="italic" />


</RelativeLayout>