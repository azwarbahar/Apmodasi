<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BAEDF6"
        android:paddingVertical="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_foto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/foto_bayi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_baby" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nama_bayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cv_foto"
            android:layout_marginTop="3dp"
            android:text="Nama Bayi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_usia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_bayi"
            android:layout_toRightOf="@id/cv_foto"
            android:text="08230987657"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_marginHorizontal="16dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text="Imunisasi"
            android:layout_alignTop="@id/tv_nama_bayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_alignLeft="@id/tv1"
            android:layout_alignRight="@id/tv1"
            android:layout_below="@id/tv1"
            android:text="11/11"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>